
@{
    ViewData["Title"] = "about";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string targetLanguage = Environment.GetEnvironmentVariable("TARGET_LANGUAGE");
    string sourceLanguage = null; // automatically detected
    //var client = Google.Cloud.Translation.V2.TranslationClient.Create();
}
<style>
    #shadowBox {
    background-color: rgb(0, 0, 0);
    /* Fallback color */
    background-color: rgba(0, 0, 0, 0.2);
    /* Black w/opacity/see-through */
    border: 3px solid;
}

    .rainbow {
        text-align: center;
        text-decoration: underline;
        font-size: 32px;
        font-family: 'Lobster', cursive;
        letter-spacing: 5px;
    }
.rainbow_text_animated {
    background: linear-gradient(to right, #6666ff, #0099ff , #00ff00, #ff3399, #6666ff);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    animation: rainbow_animation 6s ease-in-out infinite;
    background-size: 400% 100%;
}

@@keyframes rainbow_animation {
    0%,100% {
        background-position: 0 0;
    }

    50% {
        background-position: 100% 0;
    }
}
</style>
<div class="container">
    <br><br>
    <div class="row">
        <div class="col-sm-12" style="text-align : center">
           <u> <h1 class="text-monospace">@* @System.Web.HttpUtility.HtmlDecode(@client.TranslateHtml( *@À propos de nous@* , targetLanguage, sourceLanguage).TranslatedText) *@</h1></u>
            <br>
            <h2 class="text-monospace">Felix Noiseux | Samuel Dextraze</h2>
            <h2 class="text-monospace">@* @System.Web.HttpUtility.HtmlDecode(@client.TranslateHtml( *@Septembre 2019@* , targetLanguage, sourceLanguage).TranslatedText) *@</h2>
           <b><p class="text-monospace">@* @System.Web.HttpUtility.HtmlDecode(@client.TranslateHtml( *@Projet :@* , targetLanguage, sourceLanguage).TranslatedText) *@ </p></b>
        </div>
        <br><br>
        <div class="col-sm-12">
            <h1 style="font-size : 400%;" class="rainbow rainbow_text_animated">MovieGen</h1>
            <br><br>
            <h3 class="rainbow rainbow_text_animated">Ebay</h3>
            <h3 class="rainbow rainbow_text_animated">OMDB</h3>
            <h3 class="rainbow rainbow_text_animated">Youtube</h3>
            <h3 class="rainbow rainbow_text_animated">Google traduction</h3>
        </div>
        <br><br>
    </div>
</div>
