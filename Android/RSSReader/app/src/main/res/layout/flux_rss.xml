<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:id="@+id/layoutid"
              android:layout_height="wrap_content" tools:ignore="MissingDefaultResource">

    <ImageView
            android:layout_width="72dp"
            android:layout_height="71dp"
            android:id="@+id/imageViewFlux"
            android:contentDescription="imageFlux"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="4dp"
            android:onClick="voirFlux"
    />
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="217dp"
            android:layout_height="match_parent">
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:id="@+id/titreView"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:onClick="voirFlux"
        />
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/nbArticleView" android:layout_height="match_parent"/>
    </LinearLayout>
    <Button
            android:text="@string/Moins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginRight="16dp"
            android:id="@+id/buttonMoin"/>
</LinearLayout>