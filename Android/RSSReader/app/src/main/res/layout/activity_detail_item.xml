<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailItemActivity" tools:ignore="MissingDefaultResource">

    <TextView
            android:text="TextView"
            android:layout_width="394dp"
            android:layout_height="547dp"
            android:scrollbars="vertical"
            android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="70dp"
            app:layout_constraintBottom_toTopOf="@+id/telecharger" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="9dp" android:layout_marginTop="66dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Télécharger"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:id="@+id/telecharger"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/jouer"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Jouer"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:id="@+id/jouer"
            app:layout_constraintEnd_toStartOf="@+id/suivi"
            app:layout_constraintStart_toEndOf="@+id/telecharger" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Suivi"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:id="@+id/suivi"
            android:layout_marginStart="1dp"
            app:layout_constraintStart_toEndOf="@+id/jouer" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <!--    <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_launcher_foreground"
                android:id="@+id/imageViewDetail"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toStartOf="parent"/>-->

</androidx.constraintlayout.widget.ConstraintLayout>