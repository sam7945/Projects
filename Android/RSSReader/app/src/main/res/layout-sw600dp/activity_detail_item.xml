<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailItemActivity" tools:ignore="MissingDefaultResource">

    <TextView
            android:scrollbars="vertical"
            android:id="@+id/textView"
            android:layout_height="904dp"
            android:layout_width="855dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="62dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="29dp"/>
    <Button
            android:text="Télécharger"
            android:layout_width="208dp"
            android:layout_height="119dp"
            android:id="@+id/telecharger"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="202dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="31dp"/>
    <Button
            android:text="Jouer"
            android:layout_width="208dp"
            android:layout_height="121dp"
            android:id="@+id/jouer"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="29dp" android:layout_marginStart="19dp"
            app:layout_constraintStart_toEndOf="@+id/telecharger"/>
    <Button
            android:text="Suivi"
            android:layout_width="209dp"
            android:layout_height="121dp"
            android:id="@+id/suivi"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="29dp" android:layout_marginStart="38dp"
            app:layout_constraintStart_toEndOf="@+id/jouer"/>
