<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity">

    <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <ImageView
                android:id="@+id/imageView"
                android:layout_width="1000dp"
                android:layout_height="1000dp"
                app:srcCompat="@drawable/grille" />

        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                        android:id="@+id/imageA1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="15dp"
                        app:srcCompat="@drawable/x" />

                <ImageView
                        android:id="@+id/imageA2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="15dp"
                        app:srcCompat="@drawable/x" />

                <ImageView
                        android:id="@+id/imageA3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="15dp"
                        app:srcCompat="@drawable/x" />
            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                        android:id="@+id/imageB1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="15dp"
                        app:srcCompat="@drawable/x" />

                <ImageView
                        android:id="@+id/imageB2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="15dp"
                        app:srcCompat="@drawable/x" />

                <ImageView
                        android:id="@+id/imageB3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="15dp"
                        app:srcCompat="@drawable/x" />
            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                        android:id="@+id/imageC1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="15dp"
                        app:srcCompat="@drawable/x" />

                <ImageView
                        android:id="@+id/imageC2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="15dp"
                        app:srcCompat="@drawable/x" />

                <ImageView
                        android:id="@+id/imageC3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="15dp"
                        app:srcCompat="@drawable/x" />
            </TableRow>

        </TableLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>